{
  "preferences": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "lastDownloadLocation": {
        "type": "string",
        "description": "The last download location used."
      },
      "concurrentDownloads": {
        "type": "number",
        "description": "How many files should download at the same time."
      },
      "defaultDownloadLocation": {
        "type": "string",
        "description": "Default application download location."
      },
      "windowState": {
        "type": "object",
        "description": "Saves the state of the application window.",
        "additionalProperties": false,
        "properties": {
          "x": {
            "type": "number",
            "description": "X position of the window."
          },
          "y": {
            "type": "number",
            "description": "Y position of the window."
          },
          "height": {
            "type": "number",
            "description": "Height of the window."
          },
          "width": {
            "type": "number",
            "description": "Width of the window."
          },
          "isMaximized": {
            "type": "boolean",
            "description": "Is the window maximized"
          }
        }
      }
    }
  },
  "token": {
    "type": "string",
    "description": "EDL token to use for download."
  },
  "downloads": {
    "type": "object",
    "patternProperties": {
      "^.*$": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "downloadLocation": {
            "type": "string",
            "description": "Download location used for this download."
          },
          "reAuthUrl": {
            "type": "string",
            "description": "URL to use if the user needs to be re-authenticated."
          },
          "state": {
            "type": "string",
            "description": "Download state of the full download."
          },
          "timeStart": {
            "type": "number",
            "description": "The time when the download was started."
          },
          "timeEnd": {
            "type": "number",
            "description": "The time when the download was completed."
          },
          "loadingMoreFiles": {
            "type": "boolean",
            "description": "If more files are being loaded into a download"
          },
          "files": {
            "type": "object",
            "patternProperties": {
              "^.*$": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Name of the download file."
                  },
                  "url": {
                    "type": "string",
                    "description": "URL to download the file"
                  },
                  "state": {
                    "type": "string",
                    "description": "Download state of the file."
                  },
                  "percent": {
                    "type": "number",
                    "description": "Percent download complete of the file."
                  },
                  "timeStart": {
                    "type": "number",
                    "description": "The time when the download was started."
                  },
                  "timeEnd": {
                    "type": "number",
                    "description": "The time when the download was completed."
                  },
                  "errors": {
                    "type": "string",
                    "description": "Errors associated with downloading this file.",
                    "$comment": "EDD-16 is the ticket to figure errors out"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
